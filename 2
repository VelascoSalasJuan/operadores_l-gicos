let sueldoA = 50000; 

function calcularI(sueldo) {
  const UIT = 5350;
  let neto = sueldo - sueldo * 0.20 - 7 * UIT;

  if (!isNaN(sueldo) && sueldo > 0) {
    let impuesto = neto > 0 ? Math.round(neto * 0.08) : 0;

    let mensaje = impuesto > 0 || sueldo > 80000
      ? "Debes pagar: S/ " + impuesto
      : "No estás obligado a pagar impuesto.";

    console.log(mensaje);
  } else {
    console.log("El sueldo ingresado no es válido.");
  }
}

calcularI(sueldoA);
